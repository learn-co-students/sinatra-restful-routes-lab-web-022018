<form method="POST" action="/recipes/<%=@recipe.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Current recipe name: <%=@recipe.name%></p>
  <p>Update name: <input type="text" name="name"></p>
  <p>Current recipe ingredients: <%=@recipe.ingredients%></p>
  <p>Update ingredients: <input type="text" name="ingredients"></p>
  <p>Current recipe cook_time: <%=@recipe.cook_time%></p>
  <p>Update cook_time: <input type="text" name="cook_time"></p>
  <input type="submit" value="submit">
</form>
