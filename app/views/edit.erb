<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>

    <form class="" action="/recipes/<%= @recipe.id%>" method="post">
      <input id="hidden" type="hidden" name="_method" value="patch">
      <%= @recipe.name %><input type="text" name="name" value="<%= @recipe.name %>"><br>
      <%= @recipe.ingredients %><input type="text" name="ingredients" value="<%= @recipe.ingredients %>"><br>
      <%= @recipe.cook_time %><input type="text" name="cook_time" value="<%= @recipe.cook_time %>"><br>
      <input type="submit" name="submit" value="submit">
    </form>
  </body>
</html>
