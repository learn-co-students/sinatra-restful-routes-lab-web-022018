<form method="post" action="/recipes/<%=@recipe.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Name: <input id="name" type="text" name="name" value="<%= @recipe.name %>"></p>
  <p>Ingredients: <input id="ingredients" type="text" name="ingredients" value="<%= @recipe.ingredients %>"></p>
  <p>Cook Time: <input id="cook_time" type="text" name="cook_time" value="<%= @recipe.cook_time %>"></p>
  <input id="submit" type="submit">
</form>
