<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Index</title>
  </head>
  <body>
    <h1>All Recipes</h1>
      <% @recipes.each do |recipe| %>
        <h3> <a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></h3>
        <p> <%= recipe.ingredients %> </p>
        <p> <%= recipe.cook_time %> </p>
      <% end %>
  </body>
</html>
